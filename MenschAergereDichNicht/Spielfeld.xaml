        </Button>

        <Button Grid.Column="0" x:Name="btnFigBlau0" Style="{StaticResource ImageButtonStyle}" Click="btnFigBlau0_Click" Width="26" Height="44" Margin="338,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
