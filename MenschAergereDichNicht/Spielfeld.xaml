        <Button Grid.Column="1" x:Name="Dice" Style="{StaticResource ImageButtonStyle}" Click="Dice_Click" Width="120" Height="120" Margin="145,242,116,0" VerticalAlignment="Top" HorizontalAlignment="Center">
