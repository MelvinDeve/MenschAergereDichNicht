        </Button>
        <Button Grid.Column="0" x:Name="btnFigGruen2" Style="{StaticResource ImageButtonStyle}" Click="btnFigGruen2_Click" Width="26" Height="44" Margin="22,36,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
